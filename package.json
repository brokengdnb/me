{
  "name": "markdown-editor",
  "version": "1.0.0",
  "description": "A minimal, simple, dark themed Markdown Editor bundled in cross-platform Electron App (OS X, Linux, Windows)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "pack:win": "electron-packager . ME --asar --prune --platform=win32 --arch=x64 --app-version=1.0.0 --icon=icon.ico --out=build"
  },
  "electronPackagerConfig": {
    "packageManager": "npm",
    "icon": "./src/assets/imgs/icon-1024.png",
    "asar": true
  },
  "build": {
    "productName": "markdowneditor",
    "appId": "com.markdown.editor.app",
    "mac": {
      "category": "Editor"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.ico"
    }
  },
  "repository": "https://github.com/brokengdnb/me",
  "homepage": "https://github.com/brokengdnb/me",
  "keywords": [
    "Electron",
    "Markdown",
    "editor"
  ],
  "author": "BrokenG",
  "license": "MIT",
  "devDependencies": {
    "electron": "^8.0.3",
    "electron-builder": "^22.3.6",
    "electron-packager": "^14.2.1"
  },
  "dependencies": {}
}
